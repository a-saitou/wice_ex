<%= grid(@constractions_grid,  hide_submit_button: true) do |g|

  g.column name:  'ID' , attribute: 'id', filter_type: :range


  g.column name:  '略称' do |constraction|
  	constraction.abbreviation
  end

  g.column name:  'CODE' do |constraction|
    constraction.code
  end

   g.column name: '発注元', attribute: 'name',assoc: :orderer do |constraction| 
    constraction.orderer.name
  end
 
    g.column name:  '名前' , attribute: 'name', auto_reload:  true  do |constraction|
    constraction.name
  end
    g.column name:  '読み' , attribute: 'kana', auto_reload:  true , negation: true

    g.column name:  '着工日' do |constraction|
    constraction.start_date
  end

    g.column name:  '竣工日' do |constraction|
    constraction.end_date
  end

  g.column   do |constraction|
    link_to('Edit', edit_constraction_path(constraction))
  end
end 
%>