<p id="notice"><%= notice %></p>

<h1>Listing Works</h1>

<table>
  <thead>
    <tr>
      <th>Calendar</th>
      <th>Staff</th>
      <th></th>
      <th>Agreement</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Work time</th>
      <th>Over work time</th>
      <th>Late night over time</th>
      <th>Paid holiday</th>
      <th>Agency holiday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.calendar_id %></td>
        <td><%= work.staff_id %></td>
        <td><%= work. %></td>
        <td><%= work.agreement_id %></td>
        <td><%= work.start_time %></td>
        <td><%= work.end_time %></td>
        <td><%= work.work_time %></td>
        <td><%= work.over_work_time %></td>
        <td><%= work.late_night_over_time %></td>
        <td><%= work.paid_holiday %></td>
        <td><%= work.agency_holiday %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

