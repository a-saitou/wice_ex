<p id="notice"><%= notice %></p>

<h1>Listing Orderers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orderers.each do |orderer| %>
      <tr>
        <td><%= orderer.name %></td>
        <td><%= link_to 'Show', orderer %></td>
        <td><%= link_to 'Edit', edit_orderer_path(orderer) %></td>
        <td><%= link_to 'Destroy', orderer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Orderer', new_orderer_path %>
