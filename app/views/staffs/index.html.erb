<p id="notice"><%= notice %></p>

<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Office</th>
      <th>Order</th>
      <th>Wage</th>
      <th>Birthday</th>
      <th>Hire date</th>
      <th>Leacing date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.office %></td>
        <td><%= staff.order %></td>
        <td><%= staff.wage %></td>
        <td><%= staff.birthday %></td>
        <td><%= staff.hire_date %></td>
        <td><%= staff.leacing_date %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

