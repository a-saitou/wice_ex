<%= form_for(@staff) do |f| %>
  <% if @staff.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@staff.errors.count, "error") %> prohibited this staff from being saved:</h2>

      <ul>
      <% @staff.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :office %><br>
    <%= f.text_field :office %>
  </div>
  <div class="field">
    <%= f.label :order %><br>
    <%= f.number_field :order %>
  </div>
  <div class="field">
    <%= f.label :wage %><br>
    <%= f.text_field :wage %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select(
    :birthday,
                  use_month_numbers: true,
                  start_year: 2014,
                  end_year: (Time.now.year),
                  default: Date.new(2016,1,1),
                  date_separator: '/' %>
  </div>
  <div class="field">
    <%= f.label :hire_date %><br>
    <%= f.date_select(
     :hire_date,
                  use_month_numbers: true,
                  start_year: 2014,
                  end_year: (Time.now.year),
                  default: Date.new(2016,1,1),
                  date_separator: '/' %>
  </div>
  <div class="field">
    <%= f.label :leaving_date %><br>
    <%= f.date_select(
    :leaving_date,
                  use_month_numbers: true,
                  start_year: 2014,
                  end_year: (Time.now.year),
                  default: Date.new(2016,1,1),
                  date_separator: '/' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
