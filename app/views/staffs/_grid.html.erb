<%= grid(@agreements_grid) do |g|

  g.column name:  'ID' do |agreement|
  	agreement.id
  end

  g.column name:  '名前' do |agreement|
  	agreement.name
  end

  g.column name:  '所属' do |agreement|
    agreement.office
  end

  g.column name:  '表示順' do |agreement|
    agreement.order
  end

  g.column name:  '生年月日' do |agreement|
    agreement.birthday
  end


  g.column name:  '入社日' do |agreement|
    agreement.hire_date
  end

  g.column name:  '給与' do |agreement|
    agreement.wage
  end

  g.column name:  '退社日' do |agreement|
    agreement.leaving_date
  end


  g.column   do |agreement|
    link_to('Edit', edit_agreement_path(agreement))
  end
end 
%>